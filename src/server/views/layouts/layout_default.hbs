<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{title}}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/css/default.css">
  {{#each styles}}
    <link rel="stylesheet" href="/css/{{this}}">
  {{/each}}
  {{#each scripts}}
    <script src="/scripts/{{this}}" defer></script>
  {{/each}}
</head>
<body>
  <header class="site-header">
    <div class="nav-left">
      <a href="/" class="site-icon">Site Icon</a>
    </div>
    <div class="nav-links">
      <a href="/auth/login">Login</a>
      <a href="/lobby">Lobby</a>
      <a href="/about">About</a>
    </div>
  </header>

  {{#if title}}
    <h1>{{title}}</h1>
  {{else}}
    <h1>Please pass in a "title" to the route rendering</h1>
  {{/if}}

  {{#if error}}
    <h2>{{error}}</h2>
  {{else}}
    <h2>NO ERROR!</h2>
  {{/if}}

  <main id="center_content">
    {{{body}}}
  </main>

  <footer class="site-footer">
    <div class="footer-content">
      {{> footer }}
    </div>
  </footer>
</body>
</html>
