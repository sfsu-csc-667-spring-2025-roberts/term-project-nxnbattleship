{
  "main": "src/server/index.ts",
  "scripts": {
    "start": "NODE_ENV=production ts-node -P tsconfig.json src/server/index.ts",
    "start:dev": "nodemon --exec ts-node src/server/index.ts",
    "backend:dev": "nodemon --exec ts-node src/server/index.ts --ext ts,ejs,css",
    "frontend:dev": "parcel watch --dist-dir ./public/js",
    "frontend": "parcel build",
    "prepare": "husky",
    "db:create": "node-pg-migrate create -j ts --",
    "db:migrate": "ts-node node_modules/node-pg-migrate/bin/node-pg-migrate.js up -j ts",
    "db:rollback": "ts-node node_modules/node-pg-migrate/bin/node-pg-migrate.js down -j ts"
  },
  "targets": {
    "chat": {
      "source": "./src/client/chat/index.ts"
    },
    "games": {
      "source": "./src/client/games/index.ts"
    },
    "socket": {
      "source": "./src/client/socket/index.ts"
    }
  },
  "dependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.10",
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-handlebars": "^8.0.3",
    "express-session": "^1.18.1",
    "global": "^4.4.0",
    "handlebars": "^4.7.8",
    "handlebars-helpers": "^0.10.0",
    "http-errors": "^2.0.0",
    "husky": "^9.1.7",
    "live-reload": "^1.1.1",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^7.9.1",
    "nodemon": "^3.1.10",
    "parcel": "^2.15.0",
    "pg": "^8.16.0",
    "pg-promise": "^11.13.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "@types/bcrypt": "^5.0.2",
    "@types/connect-livereload": "^0.6.3",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/livereload": "^0.9.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.10",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "livereload": "^0.9.3",
    "nodemon": "^3.1.9"
  },
  "devDependencies": {
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-client": "^1.4.36",
    "bcrypt": "^5.1.1",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^5.0.1",
    "express-session": "^1.18.1",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^7.9.1",
    "pg": "^8.14.1",
    "pg-promise": "^11.13.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  }
}
